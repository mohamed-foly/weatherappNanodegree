<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09C"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin"
    android:id="@+id/widget">

    <TextView
        android:id="@+id/last_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAlignment="center"
        android:layout_marginBottom="@dimen/widget_margin"
        android:textStyle="bold" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/temperature_val_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_number_value"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignParentEnd="true"
        tools:ignore="RelativeOverlap" />
    <TextView

        android:id="@+id/area_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_area_name_label"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignParentStart="true"
        />
</RelativeLayout>
    <TextView
        android:id="@+id/short_desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAlignment="center"
        android:layout_marginBottom="@dimen/widget_margin"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/long_desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAlignment="center"
        android:layout_marginBottom="@dimen/widget_margin"
        android:textStyle="bold" />

</LinearLayout>